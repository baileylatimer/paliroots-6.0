<div class="custom-list-main">
  <div class="page-width">
    <div class="collection__title title-wrapper title-wrapper--no-top-margin center ">
    <h2 class="title inline-richtext h2"> {{ section.settings.heading }}</h2>
    </div>
    <div class="item-lists">

      {% for block in section.blocks %}

        <div class="list-item">
          
          {% if block.settings.list-link != blank %}
            <a href="{{ block.settings.list-link }}">
          {% endif %}

          {% if block.settings.list-image != blank %}
              <img class="list-image" src="{{ block.settings.list-image | img_url:'' }}" loading="lazy">
          {% endif %}
        
          {% if block.settings.list-link != blank %}
            </a>
          {% endif %}

         <h2 class="h2">{{ block.settings.list-title }}</h2>
          
        </div>

      {% endfor %}
    </div>
  </div>
</div>







{% schema %}
  {
    "name": "Custom list",
    "settings": [
      {
        "type":"text",
        "id":"heading",
        "label":"Heading"
      }
    ],
    "blocks":[
      {
          "type":"image",
          "name":"List item",
          "settings":[
            {
              "type":"text",
              "id":"list-title",
              "label":"Title"
            },
            {
              "type":"image_picker",
              "id":"list-image",
              "label":"Image"
            },
            {
              "type":"url",
              "id":"list-link",
              "label":"Item Url"
            }            
          ]
      }      
    ],
    "presets":[
      {
        "name":"Custom list",
        "category":"Custom"
      }
    ]
  }
{% endschema %}


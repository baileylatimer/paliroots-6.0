</style>
{% schema %}
  {
  "name": "Product-image-text",
  "class": "product-image-text",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "label": "Title",
      "default": "From the heart of Nablus to the world."
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<p>Woven inside a family-run factory east of Nablus, this piece carries a legacy over 70 years strong...</p>"
    },
    {
      "type": "image_picker",
      "id": "icon_1",
      "label": "Icon 1"
    },
    {
      "type": "text",
      "id": "icon_text_1",
      "label": "Icon Text 1"
    },
    {
      "type": "image_picker",
      "id": "icon_2",
      "label": "Icon 2"
    },
    {
      "type": "text",
      "id": "icon_text_2",
      "label": "Icon Text 2"
    },
    {
      "type": "image_picker",
      "id": "icon_3",
      "label": "Icon 3"
    },
    {
      "type": "text",
      "id": "icon_text_3",
      "label": "Icon Text 3"
    },
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main Image"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image Position",
      "options": [
        { "value": "first", "label": "Image First" },
        { "value": "second", "label": "Image Second" }
      ],
      "default": "first"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top Padding (Desktop)",
      "unit": "px",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom Padding (Desktop)",
      "unit": "px",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 60
    },
    {
      "type": "range",
      "id": "mobile_padding_top",
      "label": "Top Padding (Mobile)",
      "unit": "px",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 40
    },
    {
      "type": "range",
      "id": "mobile_padding_bottom",
      "label": "Bottom Padding (Mobile)",
      "unit": "px",
      "min": 0,
      "max": 200,
      "step":4,
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Product-image-text"
    }
  ]
}
{% endschema %}

{% style %}
  .product-image-text-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  @media screen and (max-width: 749px) {
    .product-image-text-{{ section.id }} {
      padding-top: {{ section.settings.mobile_padding_top }}px;
      padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
    }
  }
{% endstyle %}
<div class="product-image-text-main_wrap nablus-section {{ section.settings.image_position }} product-image-text-{{ section.id }}">
  <div class="product-image-text-inner_wrap page-width nablus-container image_position--{{ section.settings.image_position }}">
      <div class="nablus-image main_image_wrap">
        {% if section.settings.main_image != blank %}
        <img src="{{ section.settings.main_image | img_url: '' }}" alt="Main Image">
        {% else %}
          {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>
    <div class="product-image-text-content nablus-content">
      <h2>{{ section.settings.title }}</h2>
      <div class="nablus-description">{{ section.settings.content }}</div>

      <ul class="nablus-features">
        {% for i in (1..3) %}
          {% capture icon_key %}icon_{{ i }}{% endcapture %}
          {% capture text_key %}icon_text_{{ i }}{% endcapture %}
          <li class="feature-item">
            {% if section.settings[icon_key] != blank %}
            <div class="feature-icon"><img src="{{ section.settings[icon_key] | img_url: '' }}"></div>
           {% endif %}
           {% if section.settings[text_key] != blank %}
              <div class="feature-text">{{ section.settings[text_key] }}</div>
            {% endif %}
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</div>


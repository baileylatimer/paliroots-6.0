{{ 'ourstory-new.css' | asset_url | stylesheet_tag }}

{% style %}
  .our-story-wrp--{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  @media screen and (max-width: 749px) {
    .our-story-wrp--{{ section.id }} {
      padding-top: {{ section.settings.mobile_padding_top }}px;
      padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
    }
  }
{% endstyle %}
{% if section.settings.font_PP_Playground == true %}
  <style>
    .our-story-content.font_PP_Playground--true p:first-letter {
      font-family: PP-Playground;
      font-size: 98px;
    }
  </style>
{% endif %}
<div class="our-story-wrp our-story-wrp--{{ section.id }}">
  <div class="page-width">
    <div class="our-story-content {% if section.settings.font_PP_Playground %}font_PP_Playground--true{% endif %}">
      <p>{{ section.settings.story_text | escape }}</p>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Section Our Story text",
  "tag": "section",
  "class": "our-story-text",
  "settings": [
    {
      "type": "textarea",
      "id": "story_text",
      "label": "Our Story Text"
    },
    {
      "type": "checkbox",
      "default": true,
      "id": "font_PP_Playground",
      "label": "Font PP-Playground",
      "info": "Enable Font PP-Playground for first Alphabet"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top Padding (Desktop)",
      "unit": "px",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom Padding (Desktop)",
      "unit": "px",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 60
    },
    {
      "type": "range",
      "id": "mobile_padding_top",
      "label": "Top Padding (Mobile)",
      "unit": "px",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 40
    },
    {
      "type": "range",
      "id": "mobile_padding_bottom",
      "label": "Bottom Padding (Mobile)",
      "unit": "px",
      "min": 0,
      "max": 200,
      "step":4,
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Our Story Text",
      "category": "Text"
    }
  ]
}
{% endschema %}
